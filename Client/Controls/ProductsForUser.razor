<div class="col-md-4 col-sm-6">
    <div class="small-box-c">
        <div class="small-img-b">
            <a href="/productpage/@id"> <img src="@imageAddress(image)" alt="#" /></a>
        </div>
        <div class="dit-t clearfix">
            <div class="left-ti">
                <h4>@ProductName</h4>
                <p>Under <span>@Category</span></p>
            </div>
            <a href="/" tabindex="0">$@Price</a>
        </div>
        <div class="prod-btn">
            <a href="#"><i class="fa fa-star" aria-hidden="true"></i> Save to wishlist</a>
            <a href="#"><i class="fa fa-thumbs-up" aria-hidden="true"></i> Like this</a>
            <p>@Ratings likes</p>
        </div>
    </div>
</div>
@code {
    [Parameter]
    public string ProductName { set; get; }

    [Parameter]
    public string Category { set; get; }

    [Parameter]
    public string Price { set; get; }

    [Parameter]
    public int Ratings { set; get; }

    [Parameter]
    public int id { set; get; }

    [Parameter]
    public string image { get; set; }

    string imageAddress(string image)
    {
        string temp = "images/" + image + ".png";
        return temp;
    }

}